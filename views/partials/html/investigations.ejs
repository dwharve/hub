<div class="container ng-hide" ng-show="invSet.view && !invSet.selected">
  <div class="card">
    <div class="card-body p-0">
      <div class="card-title mb-0">
        <nav class="navbar  navbar-expand-lg navbar-light bg-light justify-content-between">
          <a class="navbar-brand" href="#">My Investigations</a>
          <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
              <li class="navbar-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Actions<span class="caret"></span></a>
                <div class="dropdown-menu">
                  <a class="dropdown-item" href="#" ng-click="hosts.selected.connect()">New Investigation</a>
                </div>
              </li>
            </ul>
          </div>
        </nav>
      </div>
      <table class="table">
        <thead class="">
          <th>Name</th>
          <th class="text-center">Hosts</th>
          <th class="text-center">Connections</th>
          <th class="text-center">Binaries</th>
          <th></th>
        </thead>
        <tbody class="table-striped">
          <tr ng-repeat="inv in invSet.collection">
            <th><a class="nav-link text-dark" href="#" ng-click="invSet.select(inv)">{{ inv.name }}</a></th>
            <td class="text-center" style="vertical-align:middle"><span class="badge badge-secondary"> &nbsp; {{ inv.hosts.length }} &nbsp; </span></td>
            <td class="text-center" style="vertical-align:middle"><span class="badge badge-secondary"> &nbsp; {{ inv.connections.length }} &nbsp; </span></td>
            <td class="text-center" style="vertical-align:middle"><span class="badge badge-secondary"> &nbsp; {{ inv.binaries.length }} &nbsp; </span></td>
            <td class="text-center" style="vertical-align:middle"><button class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></button></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
